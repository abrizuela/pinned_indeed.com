{
  "applications": {
    "gecko": {
      "id": "pinned_indeed.com@alejandrobrizuela.com.ar"
    }
  },

  "manifest_version": 2,
  "name": "Pinned Indeed",
  "version": "1.0.0",
  "description": "Go to the pinned Indeed.com tab. If it doesn't exist, it's created.",

  "icons": {
    "48": "icons/indeed-48.png",
    "64": "icons/indeed-64.png"
  },
  
  "permissions": [
    "tabs"
  ],

  "browser_action": {
    "default_icon": {
      "32": "icons/indeed-32.png"
    },
    "default_title": "Pinned Indeed.com",
    "default_area": "navbar"
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+I"
      }
    }
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  }

}